include "stdlib.h"

namespace Core::Network

  public
  struct HTTPRequest
    *Char http_verb
    *Char path
  end

  def http_request_create(; *HTTPRequest)
    *HTTPRequest request = malloc(sizeof(HTTPRequest))

    request->http_verb = null
    request->path = null

    return request
  end

  def HTTPRequest.http_verb(; *Char)
    return self->http_verb
  end

  def HTTPRequest.set_http_verb(*Char verb)
    self->http_verb = verb
  end

  def HTTPRequest.path(; *Char)
    return self->path
  end

  def HTTPRequest.set_path(*Char path)
    self->path = path
  end

end
